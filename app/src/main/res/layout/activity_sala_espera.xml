<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rolplayer.rolmanager.com.rolplayer.SalaEsperaActivity">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/loginCore_progress"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layoutSalaEspera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="nombre" />
        <TextView
            android:id="@+id/textView4"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/se_instructions" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="10dp"
            android:shape="rectangle"
            android:color="#FF0000"
            android:background="@color/btn_login_bg"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <ListView
                android:id="@+id/list_campaigns_espera"
                android:layout_width="match_parent"
                android:layout_height="250dp">

            </ListView>

            </RelativeLayout>

        </ScrollView>

        <Button
            android:id="@+id/btn_SumarCampa"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="buscarCampaigns"
            android:text="@string/addCampaign"/>

    </LinearLayout>
</RelativeLayout>
