<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rolplayer.rolmanager.com.rolplayer.BuscarCampaignsActivity">


    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/search_progress"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <GridLayout
        android:id="@+id/buscar_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="3"
        android:alignmentMode="alignBounds"
        android:layout_margin="5dp">

        <EditText
            android:id="@+id/bc_editText_masterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/bc_buscarPorMaster"
            android:inputType="text"
            android:layout_column="0"
            android:layout_row="0"
            />

        <Button
            android:id="@+id/bc_button_bxm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:text="@string/search" />

        <EditText
            android:id="@+id/bc_editText_campaignName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/bc_buscarPorCampaign"
            android:inputType="text"
            android:layout_column="0"
            android:layout_row="1"
            />
        <Button
            android:id="@+id/bc_button_bxc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:text="@string/search" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="10dp"
            android:shape="rectangle"
            android:color="#FF0000"
            android:background="@color/btn_login_bg"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_columnSpan="2"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/bc_list_campaigns"
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                </ListView>

            </RelativeLayout>

        </ScrollView>

    </GridLayout>
</RelativeLayout>
